<% layout('layouts/boilerplate') %>
    
<% for(blog of blogs){ %>
  <a href="blogs/<%= blog._id%>"><%= blog.title%>
<div class="row">
    <div class="col-10">
          <div class="card mb-3" style="max-width: 45rem;">
            <img src="<%= blog.image%>" class="card-img-top" alt="...">
            <div class="card-body">
            <p class="card-text"><small class="text-muted">By <%= blog.author.username%></small></p>
            </div>
          </div>
        </div>
    </div>
  </a>
<% } %>  
